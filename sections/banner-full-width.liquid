<style>
  /* --- TRAVA DE SEGURANÇA: SÓ APARECE NO CELULAR --- */
  @media screen and (min-width: 750px) {
    .banner-full-width {
      display: none !important;
    }
  }

  /* --- CSS DO BANNER --- */
  .banner-full-width {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    height: 600px; /* Altura do Banner */
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #000; /* Fundo preto de segurança */
  }

  /* Vídeo e Imagem ocupam o mesmo espaço */
  .banner-media {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .banner-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4); /* Escurece o vídeo para ler o texto */
    z-index: 2;
  }
   
  .banner-content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: #fff;
    max-width: 800px;
    padding: 20px;
  }

  /* --- Botão VIP (Ouro Dubai) --- */
  .banner-btn {
    display: inline-block; 
    padding: 15px 40px; 
    background-image: linear-gradient(to right, #AA771C 0%, #B38728 51%, #AA771C 100%);
    background-color: #B38728;
    color: #ffffff; 
    text-decoration: none; 
    font-weight: 800;
    margin-top: 20px;
    border-radius: 4px; 
    text-transform: uppercase;
    transition: all 0.5s ease; 
    border: 1px solid #FCF6BA;
    cursor: pointer;
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.4);
    background-size: 200% auto;
  }
  .banner-btn:hover {
    background-position: right center;
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.8);
  }
   
  @media (max-width: 768px) {
    .banner-full-width { height: 550px; } /* Ajuste de altura no celular */
    .banner-content h1 { font-size: 2.2rem !important; }
  }
</style>

<div class="banner-full-width">
  
  {% if section.settings.video != blank %}
    {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false, class: 'banner-media' }}
  {% elsif section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url: '1000x' }}" alt="Banner" class="banner-media">
  {% else %}
    <div class="banner-media" style="background:#000;"></div>
  {% endif %}
   
  <div class="banner-overlay"></div>
   
  <div class="banner-content">
    <h1 style="font-size: 3.5rem; font-weight: 800; margin-bottom: 10px; text-transform: uppercase; background: linear-gradient(45deg, #BF953F, #FCF6BA, #B38728, #FBF5B7, #AA771C); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
      {{ section.settings.title }}
    </h1>
     
    <a href="{{ section.settings.button_link }}" class="banner-btn">
      {{ section.settings.button_label }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Banner Full Width (Mob)",
  "settings": [
    { "type": "video", "id": "video", "label": "Vídeo (MP4)" },
    { "type": "image_picker", "id": "image", "label": "Imagem (Se não tiver vídeo)" },
    { "type": "text", "id": "title", "label": "Título", "default": "SUA MELHOR VERSÃO" },
    { "type": "text", "id": "button_label", "label": "Botão", "default": "COMPRAR AGORA" },
    { "type": "url", "id": "button_link", "label": "Link" }
  ],
  "presets": [{ "name": "Banner Full Width (Mob)" }]
}
{% endschema %}