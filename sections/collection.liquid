{% comment %}
  MUDANÇA: Substituição do render image por tag img padrão para garantir exibição
  Layout: Grid ajustado para Menina Chique (Rosa/Preto/Branco)
{% endcomment %}

<div class="page-width collection-container">
  <h1 class="collection-title">{{ collection.title }}</h1>

  <div class="collection-products">
    {% paginate collection.products by 20 %}
      {% for product in collection.products %}
        <div class="collection-product">
          <a href="{{ product.url }}" class="product-link">
            <div class="image-wrapper">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | img_url: '500x' }}" 
                  alt="{{ product.title | escape }}"
                  loading="lazy"
                  width="500"
                  height="{{ 500 | divided_by: product.featured_image.aspect_ratio | ceil }}"
                >
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            
            <div class="collection-product__content">
              <p class="product-title">{{ product.title | escape }}</p>
              <p class="product-price">{{ product.price | money }}</p>
            </div>
          </a>
        </div>
      {% endfor %}

      <div class="pagination-wrapper">
        {{ paginate | default_pagination }}
      </div>
    {% endpaginate %}
  </div>
</div>

{% stylesheet %}
  /* Container Geral */
  .collection-container {
    background-color: #FFFFFF;
    padding: 40px 20px;
    color: #000000;
  }

  .collection-title {
    text-align: center;
    color: #000000;
    text-transform: uppercase;
    font-size: 2rem;
    margin-bottom: 40px;
    letter-spacing: 2px;
    border-bottom: 2px solid #FF1493; /* Rosa Menina Chique */
    display: inline-block;
    padding-bottom: 10px;
  }

  /* Grid de Produtos */
  .collection-products {
    display: grid;
    /* Grid responsivo: ajusta automaticamente */
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); 
    gap: 20px;
  }

  /* Card do Produto */
  .collection-product {
    background-color: #FFFFFF;
    border: 1px solid #F0F0F0;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .collection-product:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
    border-color: #FFC0CB; /* Rosa claro no hover */
  }

  .product-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Área da Imagem */
  .image-wrapper {
    width: 100%;
    aspect-ratio: 3 / 4; /* Formato Retrato Padrão */
    overflow: hidden;
    background-color: #F9F9F9;
    position: relative;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Garante que a foto preencha tudo sem esticar */
    transition: transform 0.5s ease;
  }
  
  .image-wrapper svg {
    width: 100%;
    height: 100%;
    background-color: #eee;
  }

  .collection-product:hover .image-wrapper img {
    transform: scale(1.08); /* Zoom suave */
  }

  /* Conteúdo (Texto) */
  .collection-product__content {
    padding: 15px;
    text-align: center;
  }

  .product-title {
    font-size: 0.95rem;
    margin: 0 0 8px 0;
    color: #333;
    text-transform: uppercase;
    font-weight: 500;
    line-height: 1.4;
  }

  .product-price {
    font-size: 1.1rem;
    font-weight: 700;
    color: #FF1493; /* PREÇO ROSA */
    margin: 0;
  }

  /* Paginação */
  .pagination-wrapper {
    margin-top: 50px;
    text-align: center;
    grid-column: 1 / -1;
  }
  
  .pagination-wrapper span, .pagination-wrapper a {
    padding: 10px 15px;
    margin: 0 5px;
    border: 1px solid #eee;
    color: #333;
    text-decoration: none;
  }

  .pagination-wrapper .current {
    background-color: #FF1493;
    color: #fff;
    border-color: #FF1493;
  }
{% endstylesheet %}

