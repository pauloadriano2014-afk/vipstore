{% comment %}
  VIP STORE - LAYOUT DARK MODE (PRETO & DOURADO)
  - Fundo: Transparente (Usa o fundo preto do site)
  - Texto: Branco e Dourado
  - Mobile: 2 Colunas (Fixo)
  - Desktop: 4 Colunas
{% endcomment %}

<div class="collection-wrapper">
  <div class="page-width">
    
    {% if collection.products_count == 0 %}
      <div class="empty-warning">
        <h3>Nenhum produto encontrado.</h3>
      </div>
    {% endif %}

    <h1 class="collection-title">{{ collection.title }}</h1>

    <div class="vip-product-grid">
      {% paginate collection.products by 24 %}
        {% for product in collection.products %}
          <div class="vip-product-card">
            <a href="{{ product.url }}" class="product-link">
              
              <div class="image-container">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | img_url: '600x' }}" 
                    alt="{{ product.title | escape }}"
                    loading="lazy"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
               
              <div class="product-info">
                <h3 class="product-title">{{ product.title }}</h3>
                <span class="product-price">{{ product.price | money }}</span>
              </div>
            </a>
          </div>
        {% endfor %}

        {% if paginate.pages > 1 %}
          <div class="pagination-wrapper">
            {{ paginate | default_pagination }}
          </div>
        {% endif %}
      {% endpaginate %}
    </div>
  </div>
</div>

{% stylesheet %}
  /* --- RESET VISUAL (REMOVER FUNDO BRANCO) --- */
  .collection-wrapper {
    background: transparent !important; /* Deixa o preto do site aparecer */
    padding: 30px 0;
    width: 100%;
  }

  .collection-title {
    text-align: center;
    text-transform: uppercase;
    font-size: 1.8rem;
    letter-spacing: 3px;
    margin-bottom: 40px;
    color: #FFFFFF; /* TÍTULO BRANCO */
    font-weight: 700;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  }

  /* --- GRID CONFIG --- */
  .vip-product-grid {
    display: grid !important;
    width: 100% !important;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 15px;
    /* PC: 4 Colunas */
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  /* --- CARD LIMPO --- */
  .vip-product-card {
    position: relative;
    background: transparent;
  }

  .product-link {
    text-decoration: none !important;
    display: block;
  }

  /* --- FOTO (SEM BORDA) --- */
  .image-container {
    width: 100%;
    aspect-ratio: 3 / 4; 
    overflow: hidden;
    border-radius: 4px;
    margin-bottom: 12px;
    background-color: #1a1a1a; /* Cinza escuro enquanto carrega */
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .vip-product-card:hover .image-container img {
    transform: scale(1.05);
  }

  /* --- TEXTOS (DARK MODE) --- */
  .product-info {
    text-align: left;
    padding: 0 5px;
  }

  .product-title {
    font-size: 0.85rem;
    color: #FFFFFF; /* NOME DO PRODUTO BRANCO */
    font-weight: 400;
    margin: 0 0 5px 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .product-price {
    font-size: 1.1rem;
    font-weight: 700;
    color: #D4AF37; /* PREÇO DOURADO VIP */
    display: block;
  }

  /* --- MOBILE AJUSTES --- */
  @media screen and (max-width: 768px) {
    .vip-product-grid {
      /* MOBILE: 2 Colunas */
      display: grid !important;
      grid-template-columns: 1fr 1fr !important; 
      gap: 10px !important;
      padding: 0 10px !important;
    }

    .collection-title {
      font-size: 1.5rem;
      margin-bottom: 20px;
      color: #D4AF37; /* No celular fica bonito o título dourado */
    }
    
    .product-title {
      font-size: 0.75rem; /* Letra menor pra caber */
    }
  }
  
  /* PAGINAÇÃO */
  .pagination-wrapper {
    grid-column: 1 / -1;
    text-align: center;
    margin-top: 40px;
  }
  
  .pagination-wrapper span, .pagination-wrapper a { 
    padding: 10px; 
    color: #FFF;
    border: 1px solid #333;
    margin: 0 2px;
  }
  
  .pagination-wrapper .current {
    background: #D4AF37;
    color: #000;
    border-color: #D4AF37;
  }
{% endstylesheet %}

