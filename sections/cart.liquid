<div class="page-width" style="padding: 60px 20px; max-width: 1200px; margin: 0 auto;">
  <h1 style="text-align: center; text-transform: uppercase; margin-bottom: 40px; border-bottom: 2px solid #D4AF37; display: inline-block; padding-bottom: 5px;">
    Seu Carrinho
  </h1>

  {% if cart.item_count > 0 %}
    <form action="/cart" method="post" novalidate>
      <div style="border-top: 1px solid #eee;">
        {% for item in cart.items %}
          <div style="display: flex; align-items: center; justify-content: space-between; padding: 20px 0; border-bottom: 1px solid #eee; gap: 20px; flex-wrap: wrap;">
            
            <div style="display: flex; align-items: center; gap: 20px; flex: 2; min-width: 300px;">
              <a href="{{ item.url }}">
                {% if item.image %}
                  <img src="{{ item.image | img_url: '150x150', crop: 'center' }}" alt="{{ item.title | escape }}" style="border-radius: 8px; border: 1px solid #eee;">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </a>
              <div>
                <a href="{{ item.url }}" style="text-decoration: none; color: #000; font-weight: bold; text-transform: uppercase; font-size: 1rem;">
                  {{ item.product.title }}
                </a>
                {% unless item.product.has_only_default_variant %}
                  <p style="color: #666; margin: 5px 0; font-size: 0.9rem;">Opção: {{ item.variant.title }}</p>
                {% endunless %}
                <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0" style="color: #D4AF37; font-size: 0.8rem; text-decoration: underline; margin-top: 5px; display: block;">Remover</a>
              </div>
            </div>

            <div style="flex: 1; text-align: center; font-weight: bold; color: #000;">
              {{ item.price | money }}
            </div>

            <div style="flex: 1; text-align: right;">
              <input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0" style="width: 60px; padding: 10px; text-align: center; border: 1px solid #ccc; border-radius: 4px;">
            </div>
          </div>
        {% endfor %}
      </div>

      <div style="margin-top: 40px; text-align: right;">
        <h3 style="margin-bottom: 20px; text-transform: uppercase;">
          Subtotal: <span style="color: #D4AF37; font-size: 1.5rem;">{{ cart.total_price | money }}</span>
        </h3>
        <p style="font-size: 0.9rem; color: #666; margin-bottom: 20px;">Taxas e frete calculados no checkout.</p>
        
        <button type="submit" name="update" style="background: #000; color: #fff; padding: 15px 30px; border: none; font-weight: bold; cursor: pointer; border-radius: 4px; margin-right: 10px; text-transform: uppercase;">
          Atualizar
        </button>
        
        <button type="submit" name="checkout" style="background: #D4AF37; color: #fff; padding: 15px 40px; border: none; font-weight: bold; cursor: pointer; border-radius: 4px; text-transform: uppercase;">
          Finalizar Compra
        </button>
      </div>
    </form>
  {% else %}
    <div style="text-align: center; padding: 80px 0;">
      <p style="font-size: 1.2rem; color: #666; margin-bottom: 30px;">Seu carrinho está vazio.</p>
      <a href="/collections/all" style="background: #D4AF37; color: #fff; padding: 15px 40px; text-decoration: none; border-radius: 4px; font-weight: bold; text-transform: uppercase;">
        Continuar Comprando
      </a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Carrinho Fitness",
  "settings": []
}
{% endschema %}