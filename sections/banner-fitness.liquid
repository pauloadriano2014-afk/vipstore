<style>
  .banner-full-width {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    height: 600px; /* Altura fixa para Desktop */
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .banner-img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
  .banner-content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: #fff;
    max-width: 800px;
    padding: 20px;
  }
  .banner-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5); /* Escureci um pouco mais para o dourado brilhar */
    z-index: 2;
  }
  
  /* --- Estilo do Botão VIP (Ouro Dubai) --- */
  .banner-btn {
    display: inline-block; 
    padding: 15px 40px; 
    
    /* Ouro Metalizado */
    background-image: linear-gradient(to right, #AA771C 0%, #B38728 51%, #AA771C 100%);
    background-color: #B38728; /* Cor de fundo caso o degradê falhe */
    
    color: #ffffff; 
    text-decoration: none; 
    font-weight: 800; /* Negrito Forte */
    margin-top: 20px;
    border-radius: 4px; 
    text-transform: uppercase;
    transition: all 0.5s ease; 
    
    /* Detalhes de Luxo */
    border: 1px solid #FCF6BA; /* Borda fina clara */
    cursor: pointer;
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.4); /* Luz dourada em volta */
    background-size: 200% auto;
  }

  .banner-btn:hover {
    /* Animação do Ouro ao passar o mouse */
    background-position: right center;
    transform: scale(1.05); /* Aumenta levemente */
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.8); /* Explosão de brilho */
    color: #fff;
    border-color: #fff;
  }
  
  /* Ajuste para celular */
  @media (max-width: 768px) {
    .banner-full-width { height: 500px; }
    .banner-content h1 { font-size: 2.5rem !important; }
  }
</style>

<div class="banner-full-width">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url: '1800x' }}" alt="Banner" class="banner-img">
  {% else %}
    <div class="banner-img" style="background:#000;"></div>
  {% endif %}
  
  <div class="banner-overlay"></div>
  
  <div class="banner-content">
    <h1 style="font-size: 3.5rem; font-weight: 800; margin-bottom: 10px; text-transform: uppercase; background: linear-gradient(45deg, #BF953F, #FCF6BA, #B38728, #FBF5B7, #AA771C); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
      {{ section.settings.title }}
    </h1>
    
    <a href="{{ section.settings.button_link }}" class="banner-btn">
      {{ section.settings.button_label }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Banner Full Width",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Imagem" },
    { "type": "text", "id": "title", "label": "Título", "default": "SUA MELHOR VERSÃO" },
    { "type": "text", "id": "button_label", "label": "Botão", "default": "COMPRAR AGORA" },
    { "type": "url", "id": "button_link", "label": "Link" }
  ],
  "presets": [{ "name": "Banner Full Width" }]
}
{% endschema %}