<div class="contact-section">
  <div class="page-width contact-container">
    
    <div class="contact-info">
      <h2 class="contact-title">{{ section.settings.title }}</h2>
      <p class="contact-text">{{ section.settings.text }}</p>
      
      <div class="info-item">
        <span class="icon">üì±</span>
        <div>
          <strong>WHATSAPP</strong>
          <p>{{ section.settings.whatsapp }}</p>
        </div>
      </div>

      <div class="info-item">
        <span class="icon">‚úâÔ∏è</span>
        <div>
          <strong>E-MAIL</strong>
          <p>{{ section.settings.email }}</p>
        </div>
      </div>

      <div class="info-item">
        <span class="icon">üïí</span>
        <div>
          <strong>HOR√ÅRIO DE ATENDIMENTO</strong>
          <p>{{ section.settings.hours }}</p>
        </div>
      </div>

      {% if section.settings.show_whatsapp_btn %}
        <a href="https://wa.me/{{ section.settings.whatsapp | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" target="_blank" class="whatsapp-btn">
          FALAR NO WHATSAPP AGORA
        </a>
      {% endif %}
    </div>

    <div class="contact-form-wrapper">
      {% form 'contact' %}
        
        {% if form.posted_successfully? %}
          <div class="form-success">
            ‚úÖ Mensagem enviada com sucesso! Entraremos em contato em breve.
          </div>
        {% endif %}

        {{ form.errors | default_errors }}

        <div class="form-group">
          <label for="ContactFormName">NOME</label>
          <input type="text" id="ContactFormName" name="contact[name]" placeholder="Seu nome completo" required>
        </div>

        <div class="form-group">
          <label for="ContactFormEmail">E-MAIL</label>
          <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="Seu melhor e-mail" required>
        </div>

        <div class="form-group">
          <label for="ContactFormPhone">TELEFONE</label>
          <input type="tel" id="ContactFormPhone" name="contact[phone]" placeholder="(DD) 99999-9999">
        </div>

        <div class="form-group">
          <label for="ContactFormMessage">MENSAGEM</label>
          <textarea rows="5" id="ContactFormMessage" name="contact[body]" placeholder="Como podemos te ajudar?" required></textarea>
        </div>

        <button type="submit" class="submit-btn">ENVIAR MENSAGEM</button>

      {% endform %}
    </div>

  </div>
</div>

{% stylesheet %}
  .contact-section {
    padding: 60px 20px;
    background-color: transparent; /* Fundo preto do site */
    color: #FFF;
  }

  .contact-container {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Duas colunas no PC */
    gap: 60px;
    max-width: 1200px;
    margin: 0 auto;
    align-items: start;
  }

  /* --- COLUNA ESQUERDA (INFOS) --- */
  .contact-title {
    font-size: 2.5rem;
    color: #FFF;
    margin-bottom: 20px;
    text-transform: uppercase;
    border-left: 4px solid #D4AF37; /* Detalhe Dourado */
    padding-left: 15px;
    line-height: 1;
  }

  .contact-text {
    color: #CCC;
    margin-bottom: 40px;
    font-size: 1rem;
    line-height: 1.6;
  }

  .info-item {
    display: flex;
    align-items: center;
    margin-bottom: 25px;
    background: #111;
    padding: 15px;
    border-radius: 8px;
    border: 1px solid #333;
  }

  .info-item .icon {
    font-size: 1.5rem;
    margin-right: 15px;
  }

  .info-item strong {
    display: block;
    color: #D4AF37;
    font-size: 0.85rem;
    margin-bottom: 3px;
    text-transform: uppercase;
  }

  .info-item p { margin: 0; color: #FFF; }

  .whatsapp-btn {
    display: block;
    text-align: center;
    background: #25D366; /* Verde Zap */
    color: #FFF;
    font-weight: bold;
    padding: 15px;
    border-radius: 5px;
    text-decoration: none;
    margin-top: 30px;
    text-transform: uppercase;
    transition: transform 0.2s;
  }
  
  .whatsapp-btn:hover { transform: scale(1.02); }

  /* --- COLUNA DIREITA (FORMUL√ÅRIO) --- */
  .contact-form-wrapper {
    background: #111;
    padding: 40px;
    border-radius: 8px;
    border: 1px solid #333;
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
  }

  .form-group { margin-bottom: 20px; }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-size: 0.8rem;
    color: #D4AF37; /* Label Dourado */
    font-weight: bold;
    letter-spacing: 1px;
  }

  .form-group input, .form-group textarea {
    width: 100%;
    padding: 12px;
    background: #000;
    border: 1px solid #444;
    color: #FFF;
    border-radius: 4px;
    outline: none;
    font-size: 1rem;
  }

  .form-group input:focus, .form-group textarea:focus {
    border-color: #D4AF37;
  }

  .submit-btn {
    width: 100%;
    background: #D4AF37;
    color: #000;
    font-weight: 800;
    padding: 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-transform: uppercase;
    font-size: 1rem;
    transition: background 0.3s;
  }

  .submit-btn:hover { background: #F2C94C; }

  .form-success {
    background: #25D366;
    color: #000;
    padding: 15px;
    margin-bottom: 20px;
    border-radius: 4px;
    font-weight: bold;
  }

  /* --- MOBILE --- */
  @media screen and (max-width: 768px) {
    .contact-container { grid-template-columns: 1fr; gap: 40px; }
    .contact-form-wrapper { padding: 20px; }
    .contact-title { font-size: 2rem; }
  }
{% endstylesheet %}

